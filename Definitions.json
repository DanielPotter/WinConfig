    "changes": [
        {
            "id": "AdvancedExplorerOptions",
            "description": "Sets various advanced explorer options such as showing hidden files.",
            "provider": "Registry",
            "requiresShellRestart": true,
            "properties": {
                "HKCU:\\Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced": {
                    "AutoCheckSelect": 1,
                    "Hidden": 1,
                    "HideFileExt": 0,
                    "SeparateProcess": 1
                }
            }
        },
        {
            "id": "UseDarkTheme",
            "description": "Sets Windows to use the dark color theme.",
            "provider": "Registry",
            "properties": {
                "HKCU:\\Software\\Microsoft\\Windows\\CurrentVersion\\Themes\\Personalize": {
                    "AppsUseLightTheme": 0,
                    "SystemUsesLightTheme": 0
                }
            }
        },
        {
            "id": "RemoteExecutionPolicy",
            "description": "Sets PowerShell's execution policy to RemoteSigned.",
            "provider": "PowerShell",
            "script": "Set-ExecutionPolicy RemoteSigned",
            "requiresAdmin": true
        },
        {
            "id": "TrustPSGallery",
            "description": "Marks the PowerShell Gallery as a trusted package repository.",
            "provider": "PowerShell",
            "script": "Install-PackageProvider -Name NuGet -MinimumVersion 2.8.5.201; Set-PSRepository -Name PSGallery -InstallationPolicy Trusted",
            "requiresAdmin": true
        }
    ]
