{
    "$schema": "./Configuration.Schema.json",
    "sourcePreference": [
        "MicrosoftStore",
        "Choco",
        "Git"
    ],
    "packageSets": [
        {
            "name": "common",
            "description": "Applications I use all the time and want on all machines.",
            "packages": [
                "Microsoft.Edge",
                "Microsoft.VisualStudioCode",
                "QL-Win.QuickLook",
                "RykenStudio.MyTubeBeta",
                "File-New-Project.EarTrumpet",
                "DanielPotter.DynamicPSProfile"
            ]
        },
        {
            "name": "development",
            "description": "Applications I use for development.",
            "packages": [
                "Git.Git",
                "Microsoft.VisualStudioCode",
                "Microsoft.PowerShell",
                "Microsoft.WindowsTerminal",
                "Microsoft.VisualStudio.Community",
                "GitExtensionsTeam.GitExtensions",
                "JoachimEibl.KDiff3"
            ]
        },
        {
            "name": "games",
            "description": "Game related applications.",
            "packages": [
                "Valve.Steam",
                "Discord.Discord"
            ]
        },
        {
            "name": "utilities",
            "description": "Useful applications that I like to have available.",
            "packages": [
                "voidtools.Everything",
                "TGRMNSoftware.BulkRenameUtility",
                "WinDirStat.WinDirStat"
            ]
        },
        {
            "name": "uncommon",
            "description": "Applications I don't use often enough to install right away.",
            "packages": [
                "VideoLAN.VLC",
                "Audacity.Audacity",
                "GIMP.GIMP",
                "Rufus.Rufus"
            ]
        }
    ]
}